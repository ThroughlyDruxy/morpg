<ul class='monster-inventory-item item'>
  <li class='item-content'>
    {{#ifEquals type 'Special'}}
      <a
        class='item-roll-special action range-button'
        data-type='roll-special'
        title='{{localize "morpg.sheet.sendToChat"}}'
      >
        <i class='fas fa-dice-six'></i>
      </a>
    {{else}}
      {{#if system.triggerRange.min}}
        <button
          class='range-button'
          type='button'
          title='{{localize "morpg.sheet.sendToChat"}}'
        >{{system.triggerRange.min}}-{{system.triggerRange.max}}:</button>
      {{else}}
        <button
          class='range-button'
          type='button'
          title='{{localize "morpg.sheet.sendToChat"}}'
        >{{system.trigger}}:</button>
      {{/if}}
    {{/ifEquals}}
    <p class='name' id='{{_id}}'>{{name}}</p>
    <div class='delete-edit-actions'>
      <a
        class='item-edit action'
        data-type='edit'
        title='{{localize "morpg.sheet.editItem"}}'
      >
        <i class='fas fa-edit'></i>
      </a>
      <a
        class='item-delete action'
        title='{{localize "morpg.sheet.deleteItem"}}'
      >
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  <li class='toggle-editor'>
    <div>{{{system.description}}}</div>
  </li>
</ul>