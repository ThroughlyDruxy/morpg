<div class='equipment item-list'>
  {{#each actor.items}}
    {{#ifEquals type 'Equipment'}}
      <ul class='rogue-inventory-item equipment item' data-id='{{_id}}'>
        <li class='item-content'>
          <p class='name' id='{{_id}}'>{{name}}
            ({{system.quantity}})</p>
          <div class='delete-edit-actions'>
            <a
              class='item-edit action'
              data-type='edit'
              title='{{localize "morpg.sheet.editItem"}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-delete action'
              title='{{localize "morpg.sheet.deleteItem"}}'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        </li>
        <li class='toggle-editor'>
          <div>{{{system.description}}}</div>
        </li>
      </ul>
    {{/ifEquals}}
  {{/each}}
</div>