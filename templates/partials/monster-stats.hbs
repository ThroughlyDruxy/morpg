<section>
  <div class='stats'>
    <table>
      <tr>
        <th>{{localize config.stats.physical}}</th>
        <td><input
            class='input'
            name='data.physical.value'
            type='Number'
            value='{{data.physical.value}}'
            data-dtype='Number'
          /></td>
      </tr>
      <tr>
        <th>{{localize config.stats.defense}}</th>
        <td><input
            class='input'
            name='data.defense'
