<section>
  <div class='stats'>
    <table>
      <tr>
        <th
          class='stat-button'
          title='{{localize "morpg.sheet.roll"}}'
        >{{localize config.stats.physical}}</th>
        <td><input
            class='input roll-value'
            name='system.physical'
            title='{{localize "morpg.baseStats.physical"}}'
            type='number'
            value='{{actor.system.physical}}'
            data-dtype='Number'
          /></td>
      </tr>
      <tr>
        <th
          class='stat-button'
          title='{{localize "morpg.sheet.roll"}}'
        >{{localize config.stats.defense}}</th>
