      <tr>
        <th>{{localize config.stats.magic}}</th>
        <td><input
            class='input'
            name='data.magic'
            type='Number'
            value='{{data.magic}}'
            data-dtype='Number'
          /></td>
      </tr>
      <tr>
        <th>{{localize config.stats.resolve}}</th>
        <td><input
            class='input'
            name='data.resolve'
            type='Number'
            value='{{data.resolve}}'
            data-dtype='Number'
          /></td>
      </tr>
    </table>
