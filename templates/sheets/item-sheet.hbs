<form class='{{cssClass}}' autocomplete='off'>
  <link rel='stylesheet' href='systems/morpg/styles/morpg.css' />
  <header class='sheet-header'>
    <img
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
      height='64'
      width='64'
    />
    <h1>
      <input
        name='name'
        type='text'
        value='{{item.name}}'
        placeholder={{localize 'morpg.placeholder'}}
      />
    </h1>
  </header>
  <div class='sheet-content'>
    <table>
      <th class='cost' width='30' valign='top'>{{localize
          'morpg.items.cost'
        }}</th>
      <th width='30' valign='top'><input
          name='data.cost'
          type='Number'
          value='{{data.cost}}'
          data-dtype='Number'
        /></th>
        <th class='cost' width='30' valign='top'>{{localize
          'morpg.items.slots'
        }}</th>
      <th width='30' valign='top'><input
          name='data.slots'
          type='Number'
          value='{{data.slots}}'
          data-dtype='Number'
        /></th>
    </table>
    {{editor content=data.description target='data.description' button=true owner=owner editable=editable}}
  </div>
</form>