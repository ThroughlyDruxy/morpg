<form class='actor-sheet {{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <h1 class='charname'><input
        name='name'
        type='text'
        value='{{actor.name}}'
        placeholder='{{localize "Name"}}'
      /></h1>
  </header>
  <div class='stats-row'>
    <div class='stats-row left-column'>
      {{> "systems/morpg/templates/partials/rogue-stats.hbs" leftColumn=true}}
    </div>
    <div class='stats-row center-column'>
      <img
        src='{{actor.img}}'
        data-edit='img'
        title='{{actor.name}}'
        height='350px'
        width='262px'
      />
    </div>
    <div class='stats-row right-column'>
      {{> "systems/morpg/templates/partials/rogue-stats.hbs" rightColumn=true}}
    </div>
  </div>

  {{!-- Sheet Tab Navigation --}}
  {{!-- <nav class="sheet-tabs tabs" data-group="primary">
      <a class="tab" data-tab="actions">{{localize "morpg.sheet.actionsTab"}}</a>
      <a class="tab" data-tab="equipment">{{localize "morpg.sheet.equipmentTab"}}</a>
  </nav> --}}

  <section class="sheet-body">
    <div class='actions-body' data-group="primary" data-tab="actions">
      <div class='actions'>
        {{> "systems/morpg/templates/partials/rogue-actions.hbs"}}
      </div>
      <div class="bullshit">
        {{> "systems/morpg/templates/partials/rogue-bullshit.hbs"}}
      </div>
    </div>
    {{!-- <div class="equipment" data-group="primary" data-tab="equipment">
      Equipment
    </div> --}}
  </section>
</form>