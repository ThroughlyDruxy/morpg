<form class="actor-sheet {{cssClass}}" autocomplete="off">
  <link rel="stylesheet" href="systems/morpg/styles/morpg.css">
    <header class="sheet-header">
        <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    <div class="body">
      <div class="left-column">
          <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
          {{> "systems/morpg/templates/partials/monster-stats.hbs"}}
        <div class="utility-buttons">
          <a class="item-new action" data-type="new" title='{{localize 'morpg.sheet.createItem'}}'>
            <i class="fas fa-plus"></i>
          </a>
        </div>
      </div>
      <div class="right-column">
          <div class="special">
          {{> "systems/morpg/templates/partials/monster-special.hbs"}}
          </div>
          <div class="actions">
            {{> "systems/morpg/templates/partials/monster-actions.hbs"}}
          </div>
          <div class="bullshit">
           {{> "systems/morpg/templates/partials/monster-bullshit.hbs"}}
          </div>
      </div>
    </div>
</form>