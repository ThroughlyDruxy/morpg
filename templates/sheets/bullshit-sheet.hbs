<form
  class='bullshit-sheet {{cssClass}} item'
  data-id='{{item._id}}'
  autocomplete='off'
>
  <link rel='stylesheet' href='systems/morpg/styles/morpg.css' />
  <header class='sheet-header'>
    <img
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
      height='64'
      width='64'
    />
    <h1>
      <input
        name='item.name'
        type='text'
        value='{{item.name}}'
        placeholder={{localize 'morpg.placeholder'}}
      />
    </h1>
  </header>
  <div class='sheet-content'>
    <table class='details'>
      <th><h3 class='type-label'>{{localize
            'morpg.items.bullshit.type.label'
          }}:</h3></th>
      <th><select name='system.type'>
          {{selectOptions
            config.items.bullshit.type
            selected=item.system.type
            localize=true
          }}
        </select></th>
      {{!-- <th><h3 class='label'>{{localize
            'morpg.items.bullshit.isAttack'
          }}:</h3></th>
      <th><h3><input
            name='system.isAttack'
            type='checkbox'
            {{checked item.system.isAttack}}
          /></h3></th>
      {{#if item.system.isAttack}}
        <th><h3><select>
              <option value=''>-</option>
              <option value='system.physical'>Physical</option>
              <option value='system.magic'>Magic</option>
            </select></h3></th>
      {{/if}} --}}
      <th><h3 class='label'>{{localize
            'morpg.items.bullshit.trigger'
          }}:</h3></th>
      <th><h3><input
            class='trigger'
            name='system.trigger'
            type='Number'
            value='{{item.system.trigger}}'
            data-dtype='Number'
          /></h3></th>
    </table>
    {{editor
      item.system.description
      target='system.description'
      button=true
      owner=owner
      editable=editable
    }}
  </div>
</form>