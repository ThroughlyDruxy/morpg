<form class='item-sheet {{cssClass}} item' autocomplete='off'>
  <link rel='stylesheet' href='systems/morpg/styles/morpg.css' />
  <header class='sheet-header'>
    <img
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
      height='64'
      width='64'
    />
    <h1>
      <input
        name='name'
        type='text'
        value='{{item.name}}'
        placeholder={{localize 'morpg.placeholder'}}
      />
    </h1>
  </header>
  <div class='sheet-content'>
    <table class='details'>
      <th><h3 class='quantity-label'>{{localize
            'morpg.items.equipment.quantity'
          }}:</h3></th>
      <th><h3><input
            name='data.quantity'
            type='text'
            value='{{data.quantity}}'
            data-dtype='Number'
          /></h3></th>
      <th><h3 class='label'>{{localize 'morpg.items.equipment.cost'}}:</h3></th>
      <th><h3><input
            name='data.cost'
            type='text'
            value='{{data.cost}}'
            data-dtype='Number'
          /></h3></th>
      <th><h3 class='label'>{{localize
            'morpg.items.equipment.slots'
          }}:</h3></th>
      <th><h3><input
            name='data.slots'
            type='text'
            value='{{data.slots}}'
            data-dtype='Number'
          /></h3></th>
    </table>
    {{editor
      content=data.description
      target='data.description'
      button=true
      owner=owner
      editable=editable
    }}
  </div>
</form>