<form class='chat-card action-card'>
  <div class='card-header'>
    <img
      src='{{img}}'
      data-edit='img'
      title='{{name}}'
      height='40'
      width='40'
    />
    {{!-- {{#unless data.triggerRange.min}}<p>Example</p>{{/unless}} --}}
    {{#if data.triggerRange.max}}
      <p class='range'>{{data.triggerRange.min}}-{{data.triggerRange.max}}:</p>
    {{else}}
      {{#if data.trigger}}
        <p class='range'>{{data.trigger}}:</p>
      {{else}}{{/if}}
    {{/if}}
    <p class='name'>{{name}}</p>
  </div>
  <div class='card-body'>
    {{editor
      content=data.description
      target='data.description'
      button=false
      owner=false
      editable=false
    }}</div>
  {{!-- {{#if data.isAttack}}
    <div class='attack-roll'>
      <button class='attack-button rollable' type='button'>Attack</button>
    </div>
  {{/if}} --}}
  <div class='card-type'><span style='font-weight: bold;'>{{type}}</span>
    action rolled by
    <span style='font-weight: bold;'>{{actorName}}</span></div>
</form>